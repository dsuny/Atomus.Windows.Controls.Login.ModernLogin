             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             d:DesignHeight="1024" d:DesignWidth="1280"
             Loaded="DefaultLogin_Loaded"
             MouseLeftButtonDown="MouseLeftButtonDownDragMove">
